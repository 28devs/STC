section.why.block
  <canvas class="canvas js-canvas"></canvas>

  .container
    h1.why__title.h1 Почему именно мы?
    .why__inner

      .why__text-col
        .why__desc-wrap
          img.why__five(src="img/why/five-title.svg", alt="")
          .why__desc причин которые делают наш проект уникальным

      .why__double-col
        each item in whyDouble
          .why__item
            .why__item-title= item.title
            .why__item-desc= item.desc


      .why__triple-col
        each item in whyTriple
          .why__item
            .why__item-title= item.title
            .why__item-desc= item.desc

    .why__slider
      .glide
        
        .glide__track(data-glide-el='track')
          
          .glide__slides
            each item in whyDouble
              .glide__slide
                .why__item.why__item--slide
                  .why__item-title= item.title
                  .why__item-desc= item.desc

            each item in whyTriple
              .glide__slide
                .why__item.why__item--slide
                  .why__item-title= item.title
                  .why__item-desc= item.desc
            
        .glide__bullets.glide__bullets--only-sm.glide__bullets--lighter-md(data-glide-el='controls[nav]')
    

